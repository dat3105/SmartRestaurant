<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_deluxe_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/deluxe_table_tile"
                android:scaleType="centerCrop"
                android:src="@drawable/trasua"
                />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignTop="@+id/deluxe_table_price"
                android:layout_alignBottom="@+id/tvOrder"
                android:background="@color/colorBlackT" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view"
                android:background="@color/colorBlackT"
                android:layout_marginBottom="-1dp" />
            <TextView
                android:id="@+id/deluxe_table_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/deluxe_table_tile"
                android:padding="5dp"
                android:text="100 Order"
                android:textSize="12sp"
                android:textColor="#c8ffffff"/>

            <TextView
                android:id="@+id/deluxe_table_tile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:text="Name Food"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#707070"/>

            <Button
                android:id="@+id/deluxe_table_button_Buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/bt_uiborder_shadow"
                android:padding="5dp"
                android:text="Đặt bàn"
                android:textColor="@color/colorBrown"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
